.{p}base
  font-size (fpc)px
  font-family FONT_FAMILY
  line-height 1.5

  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  -webkit-text-size-adjust 100%

  -webkit-print-color-adjust exact

  font-feature-settings 'palt' 1
  // font-variant-ligatures no-common-ligatures
  // font-variant-numeric slashed-zero

  color FONT_COLOR_DEFAULT
  break_word()

  {lpc} &
    min-width (wpc)px
  {lsp} &
    width 100%
    overflow-x hidden

  a
    link_style('', '', '', '')
    &:focus
      outline none

  input,
  textarea,
  button
    padding 0
    background #fff
    appearance none
    line-height inherit
    border none
    background none
    font-size inherit
    font-family FONT_FAMILY
    outline none
    &::-moz-focus-inner
      border none

  input
    &[type="text"],
    &[type="search"],
    &[type="datetime"],
    &[type="datetime-local"],
    &[type="date"],
    &[type="week"],
    &[type="month"],
    &[type="time"],
    &[type="color"],
    &[type="password"],
    &[type="url"],
    &[type="email"],
    &[type="number"]
      min-height 2em

    &[type="date"]
      appearance none
      &::-webkit-outer-spin-button,
      &::-webkit-inner-spin-button,
      &::-webkit-clear-button
        appearance none
        margin 0
      &::-webkit-calendar-picker-indicator
        position relative
        padding .2em
        background none
        font-size .5em

  select
    appearance none
    background #fff url("data:image/png;base64,") no-repeat
    background-position right center
    background-size .5em
    padding-right 1.5em

  input
    appearance none
    border-radius 0
    &:focus
      outline none

  input[type="submit"],
  button,
  label
    cursor pointer

  img
    vertical-align top
    max-width 100%

// responsive fontsize
font_size_responsive('.' + p + 'base')

