body
  font-size (fpc)px
  font-family FONT_FAMILY
  line-height 1.5
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  -webkit-text-size-adjust 100%
  color FONT_COLOR_DEFAULT
  a
    color FONT_COLOR_LINK
    text-decoration none
    &:hover
      text-decoration underline
    &:link
    &:active
    &:visited
    &:focus
      color FONT_COLOR_LINK

  a
  input
  button
    font-family FONT_FAMILY
    -webkit-appearance none
    -moz-appearance none
    &:focus
      outline none

  input
  button
    &::-moz-focus-inner
      border none

  input
    border none
    border-radius 0

  input[type="submit"]
  label
    cursor pointer

  img
    vertical-align top
    max-width 100%

// fontsize
for i in 0 .. FONT_SIZE_SPLIT
  diff = wmin + (i * ((wsp - wmin) / FONT_SIZE_SPLIT))
  rate = diff / wsp

  if i == 0
    @media (max-width: unit(wmin, "px"))
      body
        font-size unit(round(fsp * rate), "px")
  @media (min-width: unit(round(diff), "px"))
    body
      font-size unit(round(fsp * rate), "px")

@media (min-width: unit(wsp + 1, "px"))
  body
    font-size unit(fpc, "px")
